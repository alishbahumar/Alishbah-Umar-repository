#include<iostream>
using namespace std;
int main()
{
	int rows,cols;
	int sum=0;
	//Define the size of the array;
	cout<<"Entre the number of rows";
	cin>>rows;
	cout<<"Entre the number of coulomns";
   cin>>cols;
	//Declare a 2D array
	int array[rows][cols];
	for (int i=0; i<rows; i++ )
	{
		for (int j=0; j<cols; j++)
		{
			cout<<"Element["<<i<<"]["<<j<<"]";
			cin>>array[i][j];
		}
	}
		
		//Display the 2D array
		cout<<"/n The 2D array is"<<endl;
		for(int i=0;i<rows;i++)
		{
			for(int j=0; j<cols; j++)
			{
				cout<<array[i][j]<<" ";
					sum=sum + array[i][j];
			cout<<"sum of the array is"<<sum<<endl;
			}
			double avg;
				avg=sum/2;
			cout<<"Average of the array is"<<avg<<endl;
}
		return 0;
		
		}	
		
	
